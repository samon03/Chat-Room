<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<body>
  <div class="chat-container">
    <header class="chat-header">
      <h1><i class="fas fa-comments"></i> Chat Room </h1>
      <a href="index.html" class="btn">Leave Room</a>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">
        <h3><i class="fas fa-comment-alt"></i> Room Name:</h3>
        <h2 id="room-name"><%= room.title %></h2>
        <h3><i class="fas fa-users"></i> Users</h3>
        <ul id="users">
          <li><%= room.author %></li>
          <% if (convo.length > 0) { %>
            <% convo.forEach(msg => { %> 
              <li><%= msg.sender %></li>
            <% }) %>
          <% } %>
        </ul>
      </div>
      <div class="chat-messages">
					<div class="message">
            <% if (convo.length > 0) { %>
              <% convo.forEach(msg => { %> 
                <p class="meta"><% msg.sender %><span>9:12pm</span></p>
                <p class="text">
                  <% msg.messages %>
                </p>
              <% }) %>
            <% } else { %>
              <p class="text" style="text-align: center; color: rgb(45, 168, 14);">
                 Let's Start Coversation
              </p>
            <% } %>
					</div>
					<div class="message">
						<p class="meta">Mary <span>9:15pm</span></p>
						<p class="text">
							Lorem ipsum dolor sit amet consectetur adipisicing elit. Eligendi,
							repudiandae.
						</p>
					</div>
      </div>
    </main>
    <div class="chat-form-container">
      <form id="chat-form">
        <input
          id="msg"
          type="text"
          placeholder="Enter Message"
          required
          autocomplete="off"
        />
        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
      </form>
    </div>
  </div>

  <script src="js/main.js"></script>
<%- include('../includes/end.ejs') %>