<%- include('../includes/head.ejs') %>
<%- include('../includes/navigation.ejs') %>
<body>
  <div class="chat-container">
    <header class="chat-header">
      <h1><i class="fas fa-comments"></i> Chat Room </h1>
      <a href="/create" class="btn">Leave Room</a>
    </header>
    <main class="chat-main">
      <div class="chat-sidebar">
        <h3><i class="fas fa-comment-alt"></i> Room Name:</h3>
        <h2 id="room-name"><%= room.title %></h2>
      </div>
      <div class="chat-messages">
					
            <% if (convo.length > 0) { %>
              <% convo.forEach(msg => { %> 
                <div class="message">
                  <p class="meta"><%= msg.sender %></p>
                  <p class="text">
                    <%= msg.messages %>
                  </p>
                </div> 
              <% }) %>
            <% } else { %>
              <div class="message">
                <p class="text" style="text-align: center; color: rgb(45, 168, 14);">
                  Let's Start Coversation
                </p>
              </div>
            <% } %>
      </div>
    </main>
    <div class="chat-form-container">
      <form id="chat-form" action="/room/<%= room._id %>" method="POST">
        <input
          id="msg"
          name="msg"
          type="text"
          placeholder="<% room._id %>"
          autocomplete="off"
        />
        <button class="btn"><i class="fas fa-paper-plane"></i> Send</button>
      </form>
    </div>
  </div>

  <script src="js/main.js"></script>
<%- include('../includes/end.ejs') %>